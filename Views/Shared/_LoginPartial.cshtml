@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@*<ul class="navbar-nav font-color-main">*@
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div class="pt-1 pl-3 pr-3 font-color-main opacity-dark large-font" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</div>
    </li>
    <li class="nav-item">
        <form id="logout" class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class=" pl-3 pr-3 font-color-main opacity-dark large-font">Logout</button>
        </form>
    </li>
}
else
{

    <li class="large-font nav-item py-1 px-3 pl-3 pr-3">
        <a class="font-color-main" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="large-font nav-item py-1 px-3 pl-3 pr-3">
        <a class="font-color-main" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
@*</ul>*@
