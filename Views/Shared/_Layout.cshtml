<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jupiter</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>
<body>

    <div class="navigation-bar">
        @*fa fa-space-shuttle*@
        <nav class="navbar navbar-expand-md opacity-dark fixed-top">
            <h3 class="font-color-main "> GamesVillage</h3>
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2 d-flex flex-row-reverse container">

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
                <form class="mr-auto pt-3" asp-controller="Home" asp-action="IndexSearch" method="get">
                    <p class="search-button">
                        <input type="text" class="form-control pl-3 pr-3 searchbar" name="searchString" placeholder="Search Title" value="">
                    </p>
                </form>
            </div>
        </nav>
    </div>

    <main role="main" class="col-md-12 py-3">
        @RenderBody()
    </main>

    <footer class="footer text-muted">
        <div class="container font-color-main large-font">
            &copy; 2020 - GamesVillage <a asp-area="" asp-page="/Privacy"></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
