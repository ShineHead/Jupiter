


@model Title

<div class="row ">
    <div class="col-md-3">
        <div class="card shadow-sm opacity-dark">
            <img src=@Model.ImageUrl class="details-image" height="360" alt="CoverImage">
        </div>
        <div class="card-body opacity-dark">
            <p class="">Release: @Model.ReleaseDate</p>
            <p>Publisher: @Model.Publisher</p>
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="btn font-color-main large-font">£@Model.Price</h3>
                <div class="shadow-sm">
                    <a class="btn" asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-TitleId="@Model.Id">
                        <h3 class="btn font-color-main large-font">Add To Cart</h3>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9 opacity-dark">
        <div>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 carousel-image" src=@Model.Carousel1 alt="@Model.Carousel1">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel-image" src=@Model.Carousel2 alt="@Model.Carousel2">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel-image" src=@Model.Carousel3 alt="@Model.Carousel3">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


        <div class="font-color-main pt-3">

            <p class="">@Model.Description</p>


        </div>

        <a asp-controller="Home"
           asp-action="Index">


            <div class="align-text-right">
                <p class="font-color-main">Back</p>
            </div>
        </a>
    </div>
</div>

